# Navigation

alias C='cd ~/C'
alias C='cd ~/D'
alias T='cd ~/T'
alias P='cd ~/P'
alias V='cd ~/V'

# Command shortcuts

alias src='source'
alias ll='ls -1a'
alias inissh='eval $(ssh-agent); ssh-add ~/.ssh/iwoherka.eu'

# Git shortcuts

alias gs='git status'
alias gp='git push'
alias gpf='git push --force'
alias gpl='git pull'
alias gresethead='git reset --mixed HEAD~1'
alias gcorrect='git commit --amend --no-edit'
alias gc='git commit'

# Python

alias m='python manage.py'
alias env='source env/bin/activate'

# Projects

alias lem='cd ~/C/Lem'

# Environment variables

export PATH="$HOME/.dynamic-colors/bin:$PATH"
source $HOME/.dynamic-colors/completions/dynamic-colors.zsh

# Dynamic colors

alias sodd='dynamic-colors switch solarized-dark-desaturated'
alias sol='dynamic-colors switch solarized-light'
alias sold='dynamic-colors switch solarized-light-desaturated'
alias sod='dynamic-colors switch solarized-dark'

# Other configs

source ~/.profile_local
